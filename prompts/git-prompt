# !/bin/bash


# Get Git user name
GIT_USER=$(whiptail --title "$PROMPT_TITLE - Git" --inputbox "What is your Git username?" 10 60 3>&1 1>&2 2>&3)

exitstatus=$?
if [ $exitstatus != 0 ]; then
    exit 1
fi

# Get Git user email
GIT_EMAIL=$(whiptail --title "$PROMPT_TITLE - Git" --inputbox "What is your Git email?" 10 60 3>&1 1>&2 2>&3)

exitstatus=$?
if [ $exitstatus != 0 ]; then
    exit 1
fi
